<form class='form-group col-4'>
    <div class="mb-3">
        <p class="form-label">Email</p>
        <input class="form-control" required type="email" name="email" id="email"/>
    </div>
    <div class="mb-3">
        <p class="form-label">Nombre</p>
        <input class="form-control" required type="text" name="name" id="name" />
    </div>
    <div class="mb-3">
        <p class="form-label">Apellido</p>
        <input class="form-control" required type="text" name="lastname" id="lastname"/>
    </div>
    <div class="mb-3">
        <p class="form-label">Edad</p>
        <input class="form-control" required type="number" name="age" id="age" />
    </div>
    <div class="mb-3">
        <p class="form-label">Alias</p>
        <input class="form-control" required type="text" name="username" id="username" />
    </div>
    <div class="mb-3">
        <p class="form-label">Avatar</p>
        <input class="form-control" required type="text" name="avatar" id="avatar" />
    </div>
    <div class="mb-3">
        <p class="form-label">Mensaje</p>
        <textarea class="form-control" required type="text" name="message" id="message"></textarea>
    </div>
    <div class="mb-3">
        <button class="btn btn-primary" id="botonEnviar">Enviar mensaje</button>
    </div>
</form>
